#! /usr/bin/env bash

if [ ! -d "${CARGO_HOME}" ]; then
    curl https://sh.rustup.rs -sSf | bash -s -- --no-modify-path
fi

# export PKG_CONFIG_PATH=/usr/local/opt/openssl/lib/pkgconfig

pkgs=(
   # cargo-update
   # exa
   # ripgrep
)

for pkg in "${pkgs[@]}"; do
  cargo install --force "${pkg}"
done

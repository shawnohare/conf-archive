#! /usr/bin/env bash
rm -rf $HOME/{.nix-channels,.nix-defexpr,.nix-profile,.config/nixpkgs}
rm -rf ${USER_CONFIG_HOME}/nixpkgs
sudo rm -rf /etc/nix /nix /var/root/.nix-profile /var/root/.nix-defexpr /var/root/.nix-channels /Users/shawn/.nix-profile /Users/shawn/.nix-defexpr /Users/shawn/.nix-channels
sudo rm -rf /nix
for conf in profile bashrc zshrc; do
    sudo mv "/etc/${conf}.backup-before-nix" "/etc/${conf}"
done
